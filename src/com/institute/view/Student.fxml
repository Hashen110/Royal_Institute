            <Font size="20.0" />
         </font>
      </Button>
      <Button fx:id="btnEditStudent" layoutX="275.0" layoutY="700.0" mnemonicParsing="false" onAction="#btnEditStudentOnAction" prefHeight="39.0" prefWidth="200.0" style="-fx-background-color: #ee0000;" text="Edit Student" textFill="WHITE">
